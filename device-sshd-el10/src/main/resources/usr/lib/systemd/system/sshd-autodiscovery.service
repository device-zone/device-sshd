# systemd service for managing all sshd autoconfiguration.

[Unit]
Description=Sshd Configuration Autodiscovery
PartOf=sshd.service
ReloadPropagatedFrom=sshd.service
Before=sshd.service

[Service]
Type=oneshot
ExecStart=/usr/bin/sequence -s daemon.info -b /usr/libexec device/autodiscovery/sshd.d start
ExecReload=/usr/bin/sequence -s daemon.info -b /usr/libexec device/autodiscovery/sshd.d reload
RemainAfterExit=on

[Install]
WantedBy=multi-user.target

